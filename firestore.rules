
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check user role
    function isUserType(userType) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == userType;
    }

    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Shipments collection rules
    match /shipments/{shipmentId} {
      // Allow anyone authenticated to read shipments (queries will filter them)
      allow read: if request.auth.uid != null;
      
      // Only exporters can create shipments
      allow create: if isUserType('exporter') && request.resource.data.exporterId == request.auth.uid;
      
      // Only the owning exporter can update their shipment
      allow update: if isUserType('exporter') && resource.data.exporterId == request.auth.uid;
      
      // No one can delete a shipment for now
      allow delete: if false;

      // Bids subcollection rules
      match /bids/{bidId} {
        // Exporter who owns the shipment can read all bids
        allow read: if get(/databases/$(database)/documents/shipments/$(shipmentId)).data.exporterId == request.auth.uid;

        // Carriers can create bids only on 'live' shipments
        allow create: if isUserType('carrier') && get(/databases/$(database)/documents/shipments/$(shipmentId)).data.status == 'live';

        // No one can update or delete bids for now
        allow update, delete: if false;
      }
    }
  }
}
