rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get the user's type from their document
    function getUserType(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.userType;
    }

    // Rules for user documents
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rules for the central shipments collection
    match /shipments/{shipmentId} {
      // Allow authenticated users to read and list shipments.
      // The application logic is responsible for showing the correct data.
      allow read: if request.auth != null;

      // Allow exporters to create shipments.
      allow create: if request.auth != null && getUserType(request.auth.uid) == 'exporter';
      
      // Allow the original exporter to update or delete their shipment.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.exporterId;
    }
  }
}
