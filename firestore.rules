
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getUserType() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType;
    }

    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null; // Allow user creation on signup
      allow list, delete: if false;
    }

    match /shipments/{shipmentId} {
      // Any authenticated user can read shipment listings.
      allow read: if request.auth != null;
      
      // Only authenticated exporters can create shipments.
      allow create: if getUserType() == 'exporter' && request.resource.data.exporterId == request.auth.uid;
      
      // Only the original exporter can update or delete their shipment.
      allow update, delete: if isOwner(resource.data.exporterId);

      match /bids/{bidId} {
        // The exporter who owns the shipment can read all bids.
        allow read: if isOwner(get(/databases/$(database)/documents/shipments/$(shipmentId)).data.exporterId);

        // Only authenticated carriers can create bids.
        allow create: if getUserType() == 'carrier';

        // Bids cannot be updated or deleted for now to maintain integrity.
        allow update, delete: if false;
      }
    }
  }
}
