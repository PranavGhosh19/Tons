rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload verification documents to their own folder.
    // The path format is: verification-documents/{userType}/{userId}/{fileName}
    match /verification-documents/{userType}/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
