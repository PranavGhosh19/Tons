rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for Exporter Verification Documents
    match /verification-documents/{userId}/{fileName} {
      // Allow write (upload) only if the user is authenticated and the `userId` in the path
      // matches the UID of the user making the request.
      // Also, restrict file size to 5MB and to specific image/pdf types.
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*|application/pdf');

      // Allow read only by the user who uploaded them.
      // This can be expanded later to allow employees to read for verification.
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Default rule for any other paths (if necessary in the future)
    // Be cautious with broad rules like this in production.
    match /{allPaths=**} {
      // Deny read/write by default to all other paths unless specified above.
      allow read, write: if false;
    }
  }
}
